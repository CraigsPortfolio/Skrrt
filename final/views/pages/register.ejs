<html lang="en">

<head>
  <% include ../partials/head %>
  <% include ../partials/registerHead %>
</head>

<body>
  <!-- Page Preloder -->
  <div id="preloder">
    <div class="loader"></div>
  </div>

  <!-- Header section -->
  <header class="header-section">
    <% include ../partials/header%>
  </header>
  <!-- Header section end -->

  <!-- Login Pop-up Section-->
  <%include ../partials/login%>
